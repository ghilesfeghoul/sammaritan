<div class="card mb-10 border shadow-lg rounded-lg">

  <!-- Badge -->
  <div class="badge bg-dark card-badge card-badge-start text-uppercase">
    {{ "templates.product.new" | t }}
  </div>

  <!-- Image -->
  <div class="card-img">
    <!-- Image -->
    {{ 'product-1' | placeholder_svg_tag: 'card-img-hover bg-light w-full' }}
  </div>

  <!-- Body -->
  <div class="card-body px-5">

    <!-- Vendor -->
    <div class="fs-xs">
      <span class="text-muted">{{ "templates.product.vendor" | t }}</a>
    </div>

    <!-- Title -->
    <div class="fw-bold">
      <span class="text-body">
        {{ "templates.product.title" | t }}
      </a>
    </div>

    <!-- Price -->
    <div class="fw-bold text-muted">
      {{ 99.99 | money }}
    </div>

  </div>

</div>
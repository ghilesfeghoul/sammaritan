<div class="py-3 bg-dark bg-pattern ">
  <div class="container">
    <div class="row">
      <div class="col-12">

        <!-- Text -->
        <div class="text-center text-white">
          <span class="heading-xxs letter-spacing-xl">
            {% if section.settings.promotion_text != blank %}
              {% if section.settings.promo_type == "Discount" %}
                ⚡️ {{ section.settings.promotion_text }} ⚡️
              {% else %}
                <i class="fe fe-truck me-2"></i>
                {{ section.settings.promotion_text }}
              {% endif %}
            {% endif %}
          </span>
        </div>

      </div>
    </div>
  </div>
</div>
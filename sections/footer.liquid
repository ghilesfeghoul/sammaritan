{% case section.settings.footer_type %}
  {% when 'simple' %}
  {% render 'footer-simple' %}
{% else %}
  {% render 'footer-fashion' %}
{% endcase %}

{% schema %}
  {
    "name": "t:settings_schema.footer.name",
    "blocks": [
      {
        "type": "@app"
      }, {
        "type": "link_list",
        "name": "t:settings_schema.footer.blocks.link_list.name",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "heading",
            "label": "t:settings_schema.footer.blocks.link_list.settings.heading.label"
          }, {
            "type": "link_list",
            "id": "menu",
            "label": "t:settings_schema.footer.blocks.link_list.settings.menu.label"
          }
        ]
      }, {
        "type": "text",
        "name": "t:settings_schema.footer.blocks.text.name",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "heading",
            "label": "t:settings_schema.footer.blocks.text.settings.heading.label"
          }, {
            "type": "richtext",
            "id": "subtext",
            "label": "t:settings_schema.footer.blocks.text.settings.subtext.label"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "select",
        "id": "footer_type",
        "label": "t:settings_schema.footer.settings.footer_type.label",
        "options": [
          {
            "label": "t:settings_schema.footer.settings.footer_type.options.option_1.label",
            "value": "simple"
          }, {
            "label": "t:settings_schema.footer.settings.footer_type.options.option_2.label",
            "value": "fashion"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "allow_social_links",
        "label": "t:settings_schema.general.allow_social_links.label"
      },
      {
        "type": "checkbox",
        "id": "enable_country_selector",
        "label": "t:settings_schema.general.enable_country_selector.label"
      },
      {
        "type": "checkbox",
        "id": "enable_language_selector",
        "label": "t:settings_schema.general.enable_language_selector.label"
      }, {
        "type": "checkbox",
        "id": "show_payment_methods",
        "label": "t:settings_schema.footer.settings.show_payment_methods.label"
      }, {
        "type": "text",
        "id": "rights",
        "label": "t:settings_schema.footer.settings.rights.label",
        "info": "t:settings_schema.footer.settings.rights.info"
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "t:settings_schema.general.logo.label"
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "link_list"
        }, {
          "type": "text"
        }
      ]
    }
  }
{% endschema %}
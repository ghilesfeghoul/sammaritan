<section class="pt-7 pb-12">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">

        <!-- Heading -->
        <h3 class="mb-10">My Addresses</h3>

      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-3">

        <!-- Nav -->
        <nav class="mb-10 mb-md-0">
          <div class="list-group list-group-sm list-group-strong list-group-flush-x">
            <a class="list-group-item list-group-item-action dropend-toggle " href="{{ routes.account_url }}">
              Orders
            </a>
            <a class="list-group-item list-group-item-action dropend-toggle active" href="#">
              Addresses
            </a>
            <a class="list-group-item list-group-item-action dropend-toggle" href="{{ routes.account_logout_url }}">
              Logout
            </a>
          </div>
        </nav>

      </div>
      <div id="addresses" class="col-12 col-md-9 col-lg-8 offset-lg-1">
        <div class="row">
          {% paginate customer.addresses by 10 %}
            {% for address in customer.addresses %}
              <div class="address col-12 col-lg-6">

                <!-- Card -->
                <div class="card card-lg bg-light mb-8">

                  <div class="card-body">
                    {% if address == customer.default_address %}
                      <span class="rounded-pill bg-dark text-white p-2">Default</span>
                    {% endif %}
                    <!-- Text -->
                    <p class="text-muted mb-0 py-3">
                      {{ address | format_address }}
                    </p>

                    <!-- Action -->
                    <div class="card-action card-action-end">

                      <!-- Button -->
                      <button class="edit btn btn-xs btn-circle btn-white-primary">
                        <i class="fe fe-edit-2"></i>
                      </button>

                      <!-- Button -->
                      <button
                        data-url="{{ address.url }}"
                        data-delete-address
                        class="btn btn-xs btn-circle btn-white-primary">
                        <i class="fe fe-x"></i>
                      </button>
                      <form method="post" action="{{ address.url }}">
                        <input
                          type="hidden"
                          name="_method"
                          value="delete">
                      </form>

                    </div>

                  </div>
                </div>

              </div>
              <div id="edit_address" class="col-12 d-none">

                <!-- Heading -->
                <h6 class="mb-7">
                  Edit Address
                </h6>

                <!-- Form -->
                {% form 'customer_address', address %}
                  <div class="row">
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label" for="address_fname_{{ form.id }}">First Name</label>
                        <input
                          class="form-control"
                          name="address[first_name]"
                          id="address_fname_{{ form.id }}"
                          value="{{ form.first_name }}"
                          type="text"
                          placeholder="First Name">
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label" for="address_lname_{{ form.id }}">Last Name</label>
                        <input
                          class="form-control"
                          name="address[last_name]"
                          id="address_lname_{{ form.id }}"
                          value="{{ form.last_name }}"
                          type="text"
                          placeholder="Last Name">
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-group">
                        <label class="form-label" for="address_company_{{ form.id }}">Company Name</label>
                        <input
                          class="form-control"
                          name="address[company]"
                          id="address_company_{{ form.id }}"
                          value="{{ form.company }}"
                          type="text"
                          placeholder="Company Name">
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="form-group">
                        <label class="form-label" for="address_country_{{ form.id }}">Country</label>
                        <select
                          class="form-control form-select"
                          name="address[country]"
                          id="address_country_{{ form.id }}"
                          value="{{ form.country }}"
                          data-country-selector
                          data-id="{{ form.id }}">
                          {{ all_country_option_tags }}
                        </select>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="form-group">
                        <label class="form-label" for="address_province_{{ form.id }}">Province</label>
                        <select
                          class="form-control form-select"
                          name="address[province]"
                          id="address_province_{{ form.id }}"
                          value="{{ form.province }}"></select>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-group">
                        <label class="form-label" for="address_address1_{{ form.id }}">Address Line 1</label>
                        <input
                          class="form-control"
                          name="address[address1]"
                          id="address_address1_{{ form.id }}"
                          value="{{ form.address1 }}"
                          type="text"
                          placeholder="Address Line 1">
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-group">
                        <label class="form-label" for="address_address2_{{ form.id }}">Address Line 2</label>
                        <input
                          class="form-control"
                          name="address[address2]"
                          id="address_address2_{{ form.id }}"
                          value="{{ form.address2 }}"
                          type="text"
                          placeholder="Address Line 2">
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label" for="address_city_{{ form.id }}">Town / City</label>
                        <input
                          class="form-control"
                          name="address[city]"
                          id="address_city_{{ form.id }}"
                          value="{{ form.city }}"
                          type="text"
                          placeholder="Town / City">
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label" for="address_zip_{{ form.id }}">ZIP / Postcode</label>
                        <input
                          class="form-control"
                          name="address[zip]"
                          id="address_zip_{{ form.id }}"
                          value="{{ form.zip }}"
                          type="text"
                          placeholder="ZIP / Postcode">
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-group">
                        <label class="form-label" for="address_phone_{{ form.id }}">Mobile Phone</label>
                        <input
                          class="form-control"
                          type="tel"
                          name="address[phone]"
                          id="address_phone_{{ form.id }}"
                          value="{{ form.phone }}"
                          placeholder="Mobile Phone">
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-group">
                        <div class="form-check mb-3">
                          {{ form.set_as_default_checkbox }}

                          <label
                            for="address_default_address_{{ form.id }}"
                            class="form-check-label"
                            for="defaultDeliveryAddress">Set as default address</label>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Button -->
                  <button class="btn btn-dark" type="submit">
                    Edit
                  </button>

                  <!-- Button -->
                  <button class="cancel_edit btn btn-outline-dark" type="reset">
                    Cancel
                  </button>

                {% endform %}

              </div>
            {% endfor %}
          {% endpaginate %}
          <div class="col-12">


            <!-- Button -->
            <button
              id="add"
              type="button"
              class="btn w-100 btn-lg btn-outline-border">
              Add Address
              <i class="fe fe-plus"></i>
            </button>

          </div>
        </div>
      </div>

<section>
  <div
    id="carouselExampleControls"
    class="carousel slide carousel-fade"
    data-bs-ride="carousel">
    <div class="carousel-inner" style="height: 550px;">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when "slide_1" %}
          <div class="carousel-item {% if block.settings.show_slide_1 %} active {% endif %}">
            <div style="aspect-ratio: 1.5; background-image: url({% if block.settings.image_1 != blank  %} {{ block.settings.image_1 | image_url }} {% else %} {{ "cover-5.jpg" | asset_url }} {% endif %})" class="w-100 bg-cover">
              <div class="container d-flex flex-column">
                <div class="row align-items-center py-12" style="min-height: 550px;">
                  <div class="col-12 col-md-6 col-lg-5 col-xl-4 offset-md-1">

                    {% if block.settings.show_heading %}
                      <!-- Heading -->
                      <h1>{{ block.settings.text_1 }}</h1>
                    {% endif %}

                    <!-- Heading -->
                    <h2 class="display-1 text-primary">{{ block.settings.heading_1 }}</h2>

                    <!-- Heading -->
                    <h5 class="mt-n4 mb-8">{{ block.settings.heading_1_complete }}</h5>

                    <!-- Button -->
                    <a class="btn btn-dark" href="{{ block.settings.url_1 }}">
                      {{ block.settings.text_url_1 }}
                      <i class="fe fe-arrow-right ms-2"></i>
                    </a>

                  </div>
                </div>
              </div>

            </div>
          </div>

          {% when "slide_2" %}
          <div class="carousel-item {% if block.settings.show_slide_2 %} active {% endif %}">
            <div style="aspect-ratio: 1.5; background-image: url({% if block.settings.image_2 != blank  %} {{ block.settings.image_2 | image_url }} {% else %} {{ "cover-23.jpg" | asset_url }} {% endif %})" class="w-100 bg-cover">
              <div class="container d-flex flex-column">
                <div class="row align-items-center justify-content-end py-12" style="min-height: 550px;">
                  <div class="col-12 col-md-6 col-lg-5 col-xl-4 offset-md-n1">

                    <!-- Heading -->
                    <h1 class="mb-5">{{ block.settings.heading_2 | escape }}</h1>

                    {% if block.settings.show_text_2 %}
                      <!-- Text -->
                      <p class="mb-8 fs-lg text-gray-500">
                        {{ block.settings.text_2 | escape }}
                      </p>
                    {% endif %}



                    <!-- Button -->
                    <a class="btn btn-dark" href="{{ block.settings.url_2 }}">
                      {{ block.settings.text_url_2 }}
                      <i class="fe fe-arrow-right ms-2"></i>
                    </a>

                  </div>
                </div>
              </div>
            </div>
          </div>

          {% when "slide_3" %}
          <div class="carousel-item {% if block.settings.show_slide_3 %} active {% endif %}">
            <div style="aspect-ratio: 1.5; background-image: url({% if block.settings.image_3 != blank  %} {{ block.settings.image_3 | image_url }} {% else %} {{ "cover-16.jpg" | asset_url }} {% endif %})" class="w-100 bg-cover">
              <div class="bg-dark-20">
                <div class="container d-flex flex-column">
                  <div class="row align-items-center justify-content-end" style="min-height: 550px;">
                    <div class="col-12 text-center text-white">

                      <!-- Preheading -->
                      <h4 class="mb-0">{{ block.settings.preheading_3 }}</h4>

                      <!-- Heading -->
                      <h1 class="display-1">
                        {{ block.settings.heading_3 }}
                      </h1>

                      <!-- Links -->
                      <p class="mb-0">
                        <a href="{{ block.settings.url_3 }}" class="link-underline text-reset mx-4 my-4">{{ block.settings.text_url_3 }}</a>
                        {% if block.settings.show_url_4 %}
                          <a href="{{ block.settings.url_4 }}" class="link-underline text-reset mx-4 my-4">{{ block.settings.text_url_4 }}</a>
                        {% endif %}

                      </p>

                    </div>
                  </div>
                </div>
              </div>

            </div>

          </div>
      {% else %}

        {% endcase %}
      {% endfor %}
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleControls"
      data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleControls"
      data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>


            "type": "text",
            "id": "text_url_3",
            "label": "t:settings_schema.carousel.settings.text_url_3.label",
            "default": "Shop women"
          }, {
            "type": "url",
            "id": "url_4",
            "label": "t:settings_schema.carousel.settings.url_4.label"
          }, {
            "type": "text",
            "id": "text_url_4",
            "label": "t:settings_schema.carousel.settings.text_url_4.label",

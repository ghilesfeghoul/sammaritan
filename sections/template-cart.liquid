<section class="pt-7 pb-12">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <!-- Heading -->
        {% if cart.empty? %}
          <h3 class="text-center">Your cart is empty</h3>
          <div class="text-center">
            <a class="btn btn-dark" href="{{ routes.all_products_collection_url }}">Continue Shopping</a>
          </div>
        {% else %}
          <h3 class="mb-10 text-center">Shopping Cart</h3>
        {% endif %}
      </div>
    </div>
    <div class="row">
      {% if cart.empty? == false %}
        <form
          action="{{ routes.cart_url }}"
          method="POST"
          novalidate
          class="d-flex align-items-between">
          <div class="col-12 col-md-7">
            <!-- List group -->
            <ul class="list-group list-group-lg list-group-flush-x mb-6">
              {% for item in cart.items %}
                <li class="list-group-item">
                  <div class="row align-items-center">
                    <div class="col-3">

                      <!-- Image -->
                      <a href="{{ item.url }}">
                        {% if item.image %}
                          <img
                            src="{{ item.image | image_url }}"
                            alt="{{ item.title | escape }}"
                            class="img-fluid"
                            loading="lazy">
                        {% else %}
                          {{ 'product-1' | placeholder_svg_tag: 'img-fluid' }}
                        {% endif %}
                      </a>

                    </div>
                    <div class="col">

                      <!-- Title -->
                      <div class="d-flex mb-2 fw-bold">
                        <a class="text-body" href="{{ item.url }}">{{ item.product.title | truncatewords: 5 }}</a>
                        <span class="ms-auto">{{ item.line_price | money }}</span>
                      </div>

                      <!-- Text -->
                      <p class="mb-7 fs-sm text-muted">
                        {{ item.variant.title | truncatewords: 5 }}
                      </p>



                      <!--Footer -->
                      <div class="d-flex align-items-center">
                        <!-- Select -->
                        <input
                        type="number"
                          name="updates[]"
                          id="updates_{{ forloop.index }}"
                          value="{{ item.quantity }}"
                          min="1"
                          class="form-control form-control-xxs w-auto">


                        <!-- Remove -->
                        <a class="fs-xs text-gray-400 ms-auto" href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0">
                          <i class="fe fe-x"></i>
                          Remove
                        </a>

                      </div>

                    </div>
                  </div>
                </li>
              {% endfor %}
            </ul>

            <!-- Footer -->
            <div class="row align-items-end justify-content-between mb-10 mb-md-0">
              <div class="col-12 col-md-7">

                <!-- Coupon -->
                <div class="mb-7 mb-md-0">
                  <label class="form-label fs-sm fw-bold" for="cart_note">
                    Cart notes:
                  </label>
                  <div class="row gx-5">
                    <div class="col">
                      <textarea
                        class="form-control form-control-sm"
                        name="note"
                        id="cart_note"
                        rows="5"
                        placeholder="Notes"></textarea>

                    </div>
                  </div>
                </div>

              </div>
              <div class="col-12 col-md-auto">

                <!-- Button -->
                <button
                  name="update"
                  type="submit"
                  class="btn btn-sm btn-outline-dark">Update Cart</button>

              </div>
            </div>

          </div>
          <div class="col-12 col-md-5 col-lg-4 offset-lg-1">

            <!-- Total -->
            <div class="card mb-7 bg-light">
              <div class="card-body">
                <ul class="list-group list-group-sm list-group-flush-y list-group-flush-x">
                  <li class="list-group-item d-flex">
                    <span>Subtotal</span>
                    <span class="ms-auto fs-sm">{{ cart.items_subtotal_price | money }}</span>
                  </li>
                  <li class="list-group-item d-flex fs-lg fw-bold">
                    <span>Total</span>
                    <span class="ms-auto fs-sm">{{ cart.total_price | money }}</span>
                  </li>
                  <li class="list-group-item fs-sm text-center text-gray-500">
                    Shipping cost calculated at Checkout *
                  </li>
                </ul>
              </div>
            </div>

            <!-- Button -->
            <button
              type="submit"
              name="checkout"
              class="btn w-100 btn-dark">Proceed to Checkout</a>

            <!-- Link -->
            <a class="btn btn-link btn-sm text-body d-block mt-5" href="{{ routes.all_products_collection_url }}">
              <i class="fe fe-arrow-left me-2"></i>
              Continue Shopping
            </a>

          </div>
        </form>
      {% endif %}
    </div>
  </div>
</section>
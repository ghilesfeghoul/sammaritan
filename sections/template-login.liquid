<section class="bg-light">
  {% render 'breadcrumb' %}
  <div class="container pt-5 pb-12">
    <div class="row">
      <div class="col-12 col-md-6 mx-auto">
        <!-- Card -->
        <div class="card card-lg mb-10 mb-md-0">
          <div class="card-body">
            <!-- Heading -->
            <h6 class="mb-7">{{ 'templates.customers.login.title' | t }}</h6>

            <!-- Form -->
            {% form 'customer_login' %}
              <div class="row">
                {{ form.errors | default_errors }}
                  <div class="col-12">
                  <!-- Email -->
                  <div class="form-group">
                    <label class="visually-hidden" for="loginEmail">
                      {{ 'templates.customers.login.form.inputs.email' | t }} *
                    </label>
                    <input
                      class="form-control form-control-sm"
                      id="loginEmail"
                      type="email"
                      name="customer[email]"
                      placeholder="{{ 'templates.customers.login.form.inputs.email' | t }} *"
                      required="">
                  </div>
                </div>
                <div class="col-12">
                  <!-- Password -->
                  <div class="form-group">
                    <label class="visually-hidden" for="loginPassword">
                      {{ 'templates.customers.login.form.inputs.password' | t }} *
                    </label>
                    <input
                      class="form-control form-control-sm"
                      id="loginPassword"
                      type="password"
                      name="customer[password]"
                      placeholder="{{ 'templates.customers.login.form.inputs.password' | t }} *"
                      required="">
                  </div>
                </div>
                <div class="col-12 col-md-auto">
                  <!-- Link -->
                  <div class="form-group" style="float:right">
                    <a
                      class="fs-sm text-reset"
                      data-bs-toggle="modal"
                      href="#modalPasswordReset">{{ 'templates.customers.login.forgot' | t }}</a>
                  </div>
                </div>
                <div class="col-12">
                  <!-- Button -->
                  <button class="btn btn-sm btn-dark" type="submit">{{ 'templates.customers.login.form.actions.signin' | t }}</button>
                </div>

                {% if section.settings.show_register %}
                  <a class="mt-5" href="{{ routes.account_register_url }}">{{ 'templates.customers.login.register' | t }}</a>
                {% endif %}
              </div>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div
  class="modal fade"
  id="modalPasswordReset"
  tabindex="-1"
  style="display: none;"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">

      <!-- Close -->
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="modal"
        aria-label="Close">
        <i class="fe fe-x" aria-hidden="true"></i>
      </button>

      <!-- Header-->
      <div class="modal-header lh-fixed fs-lg">
        <strong class="mx-auto">{{ 'templates.customers.login.forgot' | t }}</strong>
      </div>

      <!-- Body -->
      <div class="modal-body text-center">

        <!-- Text -->
        <p class="mb-7 fs-sm text-gray-500">
          {{ "templates.customers.login.reset.description" | t }}
        </p>

        <!-- Form -->
        {% form 'recover_customer_password' %}
          {{ form.errors | default_errors }}
          <!-- Email -->
          <div class="form-group">
            <label class="visually-hidden" for="modalPasswordResetEmail">
              {{ 'templates.customers.login.form.inputs.email' | t }} *
            </label>
            <input
              name="email"
              class="form-control form-control-sm"
              id="modalPasswordResetEmail"
              type="email"
              placeholder="{{ 'templates.customers.login.form.inputs.email' | t }} *"
              required="">
          </div>

          <!-- Button -->
          <button type="submit" class="btn btn-sm btn-dark">
            {{ "templates.customers.login.reset.submit" | t }}
          </button>

        {% endform %}

      </div>

    </div>

  </div>
</div>

{% schema %}
  {
    "name": "t:settings_schema.login.name",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_register",
        "default": true,
        "label": "t:settings_schema.login.settings.show_register.label"
      }
    ]
  }
{% endschema %}
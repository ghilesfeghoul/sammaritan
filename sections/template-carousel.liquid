<section>
    <div data-flickity="{&quot;prevNextButtons&quot;: true, &quot;fade&quot;: true}" class="flickity-enabled is-draggable is-fade" tabindex="0">
        <div class="flickity-viewport" style="height: 550px;">
            <div class="flickity-slider" style="transform: translateX(0%);">
                    {% if section.settings.show_slide_1 %}
                    <div class="w-100 bg-cover flickity-cell" style="background-image: url(&quot;{% if section.settings.image_1 != blank  %} {{ section.settings.image_1 | image_url }} {% else %} {{ "cover-5.jpg" | asset_url }} {% endif %} &quot;); transform: translateX(0%); opacity: 0;" aria-hidden="true">
                        <div class="container d-flex flex-column">
                        <div class="row align-items-center py-12" style="min-height: 550px;">
                            <div class="col-12 col-md-6 col-lg-5 col-xl-4 offset-md-1">

                            <!-- Heading -->
                            <h1>{{ section.settings.text_1 | escape }}</h1>

                            {% if section.settings.show_heading %}
                                <!-- Heading -->
                                <h2 class="display-1 text-primary">
                                    {{ section.settings.heading_1 | escape }}
                                </h2>

                                <!-- Heading -->
                                <h5 class="mt-n4 mb-8">{{ section.settings.heading_1_complete | escape }}</h5>
                            {% endif %}
                            <!-- Button -->
                            <a class="btn btn-dark" href="{{ section.settings.url_1 }}">
                                {{ section.settings.text_url_1 }} <i class="fe fe-arrow-right ms-2"></i>
                            </a>

                            </div>
                        </div>
                        </div>
                    </div>
                    {% endif %}    

                    {% if section.settings.show_slide_2 %}
                <div class="w-100 bg-cover flickity-cell" style="background-image: url(&quot;{% if section.settings.image_2 != blank  %} {{ section.settings.image_2 | image_url }} {% else %} {{ "cover-23.jpg" | asset_url }} {% endif %}&quot;); transform: translateX(0%); opacity: 0;" aria-hidden="true">
                        <div class="container d-flex flex-column">
                        <div class="row align-items-center justify-content-end py-12" style="min-height: 550px;">
                            <div class="col-12 col-md-6 col-lg-5 col-xl-4 offset-md-n1">
            
                            <!-- Heading -->
                            <h1 class="mb-5">{{ section.settings.heading_2 | escape }}</h1>
            
            
                            {% if section.settings.show_text_2 %}
                            <!-- Text -->
                            <p class="mb-8 fs-lg text-gray-500">
                                {{ section.settings.text_2 | escape }}
                            </p>
                        {% endif %}
            
                            <!-- Button -->
                            <a class="btn btn-dark" href="{{ section.settings.url_2 }}">
                                {{ section.settings.text_url_2 }} <i class="fe fe-arrow-right ms-2"></i>
                            </a>
            
                            </div>
                        </div>
                        </div>
                    </div>
                    {% endif %}

                    {% if section.settings.show_slide_3 %}
                        <div class="w-100 bg-cover flickity-cell is-selected" style="background-image: url(&quot;{% if section.settings.image_3 != blank  %} {{ section.settings.image_3 | image_url }} {% else %} {{ "cover-16.jpg" | asset_url }} {% endif %}&quot;); transform: translateX(0%); opacity: 1;">
                        <div class="bg-dark-20">
                            <div class="container d-flex flex-column">
                            <div class="row align-items-center justify-content-end" style="min-height: 550px;">
                                <div class="col-12 text-center text-white">

                                <!-- Preheading -->
                                <h4 class="mb-0">{{ section.settings.preheading_3 | escape }}</h4>

                                <!-- Heading -->
                                <h1 class="display-1">
                                    {{ section.settings.heading_3 | escape }}
                                </h1>

                                <!-- Links -->
                                <p class="mb-0">
                                    <a href="{{ section.settings.url_3 }}" class="link-underline text-reset mx-4 my-4">{{ section.settings.text_url_3 | escape }}</a>
                                    {% if section.settings.show_url_4 %}
                                    <a href="{{ section.settings.url_4 }}" class="link-underline text-reset mx-4 my-4">{{ section.settings.text_url_4 | escape }}</a>
                                    {% endif %}
                                    
                                </p>

                                </div>
                            </div>
                            </div>
                        </div>
                        </div>            
                    {% endif %}
            </div>
        </div>
            
        <button class="flickity-button flickity-prev-next-button previous" type="button" aria-label="Previous">
                <svg class="flickity-button-icon" viewBox="0 0 100 100">
                    <title>
                        Previous
                    </title>
                    <path d="M 10, 50L 60, 100L 70, 90L 30, 50L 70, 10L 60, 0Z" class="arrow"></path>
                </svg>
        </button>
            
        <button class="flickity-button flickity-prev-next-button next" type="button" aria-label="Next">
                <svg class="flickity-button-icon" viewBox="0 0 100 100">
                    <title>Next</title>
                <path d="M 10, 50L 60, 100L 70, 90L 30, 50L 70, 10L 60, 0Z" class="arrow" transform="translate(100, 100) rotate(180)"></path>
                </svg>
        </button>
    </div>
</section>


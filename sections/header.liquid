{% case section.settings.header_selector %}
  {% when 'Fashion' %}
  {% render 'header-fashion' %}

  {% when 'Assymetric' %}
  {% render 'header-assymetric' %}
{% else %}
  {% render 'header-classic' %}
{% endcase %}

{% schema %}
  {
    "name": "t:settings_schema.header.name",
    "settings": [
      {
        "type": "select",
        "id": "header_selector",
        "options": [
          {
            "label": "t:settings_schema.header.settings.header_selector.options.option_1.label",
            "value": "Fashion"
          }, {
            "label": "t:settings_schema.header.settings.header_selector.options.option_2.label",
            "value": "Classic"
          }, {
            "label": "t:settings_schema.header.settings.header_selector.options.option_3.label",
            "value": "Assymetric"
          }
        ],
        "label": "t:settings_schema.header.settings.header_selector.label",
        "info": "t:settings_schema.header.settings.header_selector.info"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "t:settings_schema.header.settings.menu.label",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "enable_country_selector",
        "default": true,
        "label": "t:settings_schema.general.enable_country_selector.label"
      },
      {
        "type": "checkbox",
        "id": "enable_language_selector",
        "default": true,
        "label": "t:settings_schema.general.enable_language_selector.label"
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "t:settings_schema.general.logo.label"
      }, {
        "type": "checkbox",
        "id": "allow_social_links",
        "default": false,
        "label": "t:settings_schema.general.allow_social_links.label"
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }, {
        "name": "t:settings_schema.header.blocks.link.name",
        "type": "link",
        "limit": 3,
        "settings": [
          {
            "type": "url",
            "id": "link_url",
            "label": "t:settings_schema.header.blocks.link.settings.link_url.label"
          }, {
            "type": "text",
            "id": "text_display",
            "label": "t:settings_schema.header.blocks.link.settings.text_display.label",
            "default": "Link"
          }
        ]
      }, {
        "name": "t:settings_schema.header.blocks.customer_account.name",
        "type": "customer_account",
        "limit": 1
      }, {
        "name": "t:settings_schema.header.blocks.customer_cart.name",
        "type": "customer_cart",
        "limit": 1
      }
    ]
  }
{% endschema %}
{% case section.settings.header_selector %}
  {% when 'Classic' %}
  {% render 'header-default' %}

  {% when 'Assymetric' %}
  {% render 'header-assymetric' %}
{% else %}
  {% render 'header-simple' %}
{% endcase %}

{% schema %}
  {
    "settings": [
      {
        "type": "select",
        "id": "header_selector",
        "options": [
          {
            "label": "Classic",
            "value": "Classic"
          }, {
            "label": "Simple",
            "value": "Simple"
          }, {
            "label": "Assymetric",
            "value": "Assymetric"
          }
        ],
        "label": "Choose the default header to render in your shop",
        "info": "Header chooser"
      }, {
        "type": "link_list",
        "id": "menu",
        "label": "Header menu",
        "default": "main-menu"
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }, {
        "name": "Link",
        "type": "link",
        "limit": 3,
        "settings": [
          {
            "type": "url",
            "id": "link_url",
            "label": "Type the link url"
          }, {
            "type": "text",
            "id": "text_display",
            "label": "Type the text to display in the header"
          }
        ]
      }, {
        "name": "Account",
        "type": "customer_account",
        "limit": 1
      }, {
        "name": "Cart",
        "type": "customer_cart",
        "limit": 1
      }
    ]
  }
{% endschema %}
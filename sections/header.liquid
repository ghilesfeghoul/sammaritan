{% case section.settings.header_selector %}
  {% when 'Fashion' %}
  {% render 'header-fashion' %}

  {% when 'Assymetric' %}
  {% render 'header-assymetric' %}
{% else %}
  {% render 'header-classic' %}
{% endcase %}

{% schema %}
  {
    "settings": [
      {
        "type": "select",
        "id": "header_selector",
        "options": [
          {
            "label": "Fashion",
            "value": "Fashion"
          }, {
            "label": "Classic",
            "value": "Classic"
          }, {
            "label": "Assymetric",
            "value": "Assymetric"
          }
        ],
        "label": "Choose the default header to render in your shop",
        "info": "Header chooser"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Header menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "enable_country_selector",
        "default": true,
        "label": "Show country selector"
      },
      {
        "type": "checkbox",
        "id": "enable_language_selector",
        "default": true,
        "label": "Show language selector"
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "Choose the logo to display (your brand)"
      }, {
        "type": "checkbox",
        "id": "allow_social_links",
        "default": false,
        "label": "Display all social links"
      }, {
        "type": "text",
        "id": "facebook_link",
        "label": "Your facebook link"
      }, {
        "type": "checkbox",
        "id": "allow_facebook_link",
        "default": false,
        "label": "Display facebook link"
      }, {
        "type": "text",
        "id": "youtube_link",
        "label": "Your YouTube link"
      }, {
        "type": "checkbox",
        "id": "allow_youtube_link",
        "default": false,
        "label": "Display YouTube link"
      }, {
        "type": "text",
        "id": "twitter_link",
        "label": "Your Twitter link"
      }, {
        "type": "checkbox",
        "id": "allow_twitter_link",
        "default": false,
        "label": "Display Twitter link"
      }, {
        "type": "text",
        "id": "instagram_link",
        "label": "Your Instagram link"
      }, {
        "type": "checkbox",
        "id": "allow_instagram_link",
        "default": false,
        "label": "Display Instagram link"
      }, {
        "type": "text",
        "id": "medium_link",
        "label": "Your Medium link"
      }, {
        "type": "checkbox",
        "id": "allow_medium_link",
        "default": false,
        "label": "Display Medium link"
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }, {
        "name": "Link",
        "type": "link",
        "limit": 3,
        "settings": [
          {
            "type": "url",
            "id": "link_url",
            "label": "Type the link url"
          }, {
            "type": "text",
            "id": "text_display",
            "label": "Type the text to display in the header"
          }
        ]
      }, {
        "name": "Account",
        "type": "customer_account",
        "limit": 1
      }, {
        "name": "Cart",
        "type": "customer_cart",
        "limit": 1
      }
    ]
  }
{% endschema %}
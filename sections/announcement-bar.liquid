{% for option in section.settings.type_annoncement %}
  {% if option == 'Promotion' %}
    {% render 'promotion' %}

  {% else %}
    {% render 'other-announcement' %}
  {% endif %}
{% endfor %}


{% schema %}
  {
    "name": "t:settings_schema.announcement-bar.name",
    "enabled_on": {
      "groups": ["header"]
    },
    "settings": [
      {
        "id": "type_annoncement",
        "label": "t:settings_schema.announcement-bar.settings.type_annoncement.label",
        "type": "select",
        "options": [
          {
            "label": "t:settings_schema.announcement-bar.settings.type_annoncement.options.option_1.label",
            "value": "Promotion"
          }, {
            "label": "t:settings_schema.announcement-bar.settings.type_annoncement.options.option_2.label",
            "value": "Other"
          }
        ],
        "default": "Promotion"
      },
      {
        "type": "text",
        "id": "promotion_text",
        "label": "t:settings_schema.announcement-bar.settings.promotion_text.label",
        "default": "Promotion"
      },
      {
        "type": "select",
        "id": "promo_type",
        "options": [
          {
            "label": "t:settings_schema.announcement-bar.settings.promo_type.options.option_1.label",
            "value": "Free shipping"
          }, {
            "label": "t:settings_schema.announcement-bar.settings.promo_type.options.option_2.label",
            "value": "Discount"
          }
        ],
        "default": "Discount",
        "label": "t:settings_schema.announcement-bar.settings.promo_type.label"
      },
      {
        "type": "checkbox",
        "id": "enable_country_selector",
        "default": true,
        "label": "t:settings_schema.general.enable_country_selector.label",
        "info": "t:settings_schema.announcement-bar.settings.enable_country_selector.info"
      }, {
        "type": "checkbox",
        "id": "enable_language_selector",
        "default": true,
        "label": "t:settings_schema.general.enable_language_selector.label",
        "info": "t:settings_schema.announcement-bar.settings.enable_language_selector.info"
      }, {
        "type": "checkbox",
        "id": "allow_social_links",
        "default": false,
        "label": "t:settings_schema.general.allow_social_links.label",
        "info": "t:settings_schema.announcement-bar.settings.allow_social_links.info"
      }
    ],
    "blocks": [
      {
        "name": "t:settings_schema.announcement-bar.blocks.link.name",
        "type": "link",
        "limit": 3,
        "settings": [
          {
            "type": "url",
            "id": "link_url",
            "label": "t:settings_schema.announcement-bar.blocks.settings.link_url.label",
            "info": "t:settings_schema.announcement-bar.blocks.settings.link_url.info"
          }, {
            "type": "text",
            "id": "text_display",
            "label": "t:settings_schema.announcement-bar.blocks.settings.text_display.label",
            "info": "t:settings_schema.announcement-bar.blocks.settings.text_display.info"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:settings_schema.announcement-bar.name"
      }
    ],
    "limit": 2
  }
{% endschema %}